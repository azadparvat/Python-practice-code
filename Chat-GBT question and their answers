 print(n*i)


# Task: print the sum of first n natural number
n = int(input("enter the number: "))

i = 1
sum = 0
for i in range(n+1):
    sum +=i
    print(sum ,end =" ")

#task: print the factorial of n number
n = int(input("enter the number: "))
fact = 1
i = 1
while (i<=n):
    fact *= i
    i +=1
    print(fact)


#task: Wrtie a program to print the reverse number
n = int(input("Enter the number: "))
rev = 0
while n>0:
 rev = (rev*10)+ n%10
 n = n//10
 print(rev) 




 # task: print the minimum number from the given list using loop 
l = [1,2,3,4,5,0,7,8,9,19]
min_num = l[0]
for num in l:
    if num<min_num:
        min_num = num
print("The minimum number is :" ,min_num)

#task: print the count of even number present in the list
l = [2,3,4,5,5,7,8,9,9]
even_count = 0
for even in l:
    if even % 2 == 0:
        even_count += 1
print(even_count)
    
